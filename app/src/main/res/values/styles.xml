<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SearchTypeButton" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:backgroundTint">?colorPrimaryContainer</item>
    </style>

    <style name="DefaultToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <!-- Map aircraft details sheet styles -->

    <style name="MapSheet.Row" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MapSheet.Cell" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="MapSheet.CellLabel" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="MapSheet.CellValue" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MapSheet.SectionHeader" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:accessibilityHeading">true</item>
    </style>

</resources>